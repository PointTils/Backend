# Database Configuration
POSTGRES_USER=postgres
POSTGRES_PASSWORD=postgres
POSTGRES_DB=postgres-dev

# Spring Application Configuration
SPRING_APPLICATION_NAME=pointtils-api
SERVER_PORT=8080

# Spring DataSource Configuration
SPRING_DATASOURCE_URL=jdbc:postgresql://pointtils-dev-db:5432/postgres-dev
SPRING_DATASOURCE_USERNAME=postgres
SPRING_DATASOURCE_PASSWORD=postgres

# AWS Configuration (para S3 e outros serviços)
CLOUD_AWS_BUCKET_NAME=pointtils-dev-bucket
AWS_ACCESS_KEY_ID=your-aws-access-key-id
AWS_SECRET_ACCESS_KEY=your-aws-secret-access-key
AWS_REGION=us-east-2

# JPA/Hibernate Configuration
# Mudança importante: com Flyway, usamos 'validate' ao invés de 'update'
# O Flyway gerencia as mudanças no schema, não o Hibernate
SPRING_JPA_HIBERNATE_DDL_AUTO=validate
SPRING_JPA_SHOW_SQL=true

# JWT Configuration
JWT_SECRET=testandoUmaNovaSenhaMasterComMaisDeTrintaEdoisCaracteres
JWT_ISSUER=pointtils-api
JWT_EXPIRATION_TIME=900000
JWT_REFRESH_EXPIRATION_TIME=604800000

# Flyway Configuration
SPRING_FLYWAY_ENABLED=true
SPRING_FLYWAY_LOCATIONS=classpath:db/migration
SPRING_FLYWAY_BASELINE_ON_MIGRATE=true
SPRING_FLYWAY_VALIDATE_ON_MIGRATE=true

# Swagger/OpenAPI Configuration
SPRINGDOC_API_DOCS_ENABLED=true
SPRINGDOC_SWAGGER_UI_ENABLED=true
SPRINGDOC_SWAGGER_UI_PATH=/swagger-ui.html
